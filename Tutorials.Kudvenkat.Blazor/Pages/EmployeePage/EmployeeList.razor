@page "/"
@inherits EmployeeListBase

<h3>Employee List</h3>

<div class="card-deck">

    @if ( Employees == null )
    {
        <div class="spinner"></div>
    }
    else
    {
        @foreach ( var item in Employees )
        {
            <div class="card">
                <h3 class="card-header">
                    @item.FirstName @item.LastName
                </h3>
                <img class="card-img-top image-thumbnail" src="/Image/@item.Photo" />
                <div class="card-footer">
                    <a href="#" class="btn btn-primary m-1">
                        View
                    </a>
                    <a href="#" class="btn btn-primary m-1">
                        Edit
                    </a>
                    <a href="#" class="btn btn-danger  m-1">
                        Delete
                    </a>
                </div>
            </div>
        }
    }
</div>

